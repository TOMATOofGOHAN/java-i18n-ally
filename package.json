{
  "name": "java-i18n-ally",
  "displayName": "Java I18N Ally",
  "description": "JavaのI18Nメッセージを補助するVSCode拡張",
  "publisher": "TOMATOofGOHAN",
  "version": "1.0.1",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Java I18N Ally",
      "properties": {
        "java-i18n-ally.customMethods": {
          "type": "array",
          "description": "I18N メッセージキーを取得するメソッドパターン",
          "default": []
        }
      }
    }
  },
  "readme": "README.md",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "bundle": "node esbuild.js",
    "build": "npm run bundle && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TOMATOofGOHAN/java-i18n-ally.git"
  }
}
